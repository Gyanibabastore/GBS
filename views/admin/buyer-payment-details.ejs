    </div>
    <!-- Summary -->
    <div class="row mb-4">
      <div class="col-md-6">
        <div class="summary-card bg-success">
          <h5>Total Paid</h5>
          <p class="h4">â‚¹<%= totalPayment.toLocaleString() %></p>
