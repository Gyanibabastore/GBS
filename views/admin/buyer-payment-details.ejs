    <!-- Payment Transactions -->
    <div class="row g-4">
      <% payments.forEach((txn, index) => { %>
        <div class="col-md-6">
          <div class="card p-3">
            <img src="<%= txn.image %>" class="transaction-img mb-3" alt="Proof">
            <div class="card-body">
              <h5 class="card-title">Transaction <%= index + 1 %></h5>
              <p class="card-text">
                Amount: â‚¹<%= txn.amount %><br>
                Mode: <%= txn.mode %><br>
                Date: <%= txn.date.toISOString().split('T')[0] %>
              </p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

  </div>
  <script src="/js/admin/buyer-payment-details.js"></script>
