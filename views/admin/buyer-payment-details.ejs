      <!-- Add Payment Button -->
<!-- Add Payment Button (GET with buyerId) -->
<div class="mb-4 text-end">
  <a href="/admin/addpayment?buyerId=<%= buyer._id %>" class="btn btn-primary">
    âž• Add Payment to Buyer
  </a>
