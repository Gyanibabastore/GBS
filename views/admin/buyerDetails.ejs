      <!-- Filter -->
      <div class="row filter-bar">
        <div class="col-md-4">
          <label for="monthSelect" class="form-label">Select Month</label>
          <select id="monthSelect" class="form-select" data-buyer-slug="<%= buyer.slug %>">
            <% monthOptions.forEach(month => { %>
              <option value="<%= month %>" <%= selectedMonth === month ? "selected" : "" %>><%= month %></option>
            <% }); %>
          </select>
        </div>
      </div>

      <!-- Orders -->
      <div class="row">
        <% buyer.orders.forEach(order => { %>
          <div class="col-md-4 mb-3">
            <div class="card order-card" style="border-left: 5px solid <%= order.colorCode %>;">
              <div class="card-body">
                <h5 class="card-title"><%= order.brand %></h5>
                <h2 class="card-title"><%= order.deviceName %></h2>
