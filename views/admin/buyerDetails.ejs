      <h2 class="mb-4">Buyer Details: <%= buyer.name %></h2>

      <!-- Buyer Info -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="card buyer-info-card w-100">
            <div class="card-body">
              <h5 class="card-title"><%= buyer.name %></h5>
