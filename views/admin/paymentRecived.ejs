<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: "Payment Received - GBSTORE" }) %>
  <link rel="stylesheet" href="/css/admin/paymentdue.css">
</head>
<body>
  <%- include('../partials/adminNavbar') %>
  <div class="container py-4">
    <a href="/admin/dashboard" class="btn btn-warning mb-3">â¬… Back to Dashboard</a>

    <h2 class="mb-4">ğŸ’µ Payment Received Summary (From Sellers)</h2>

    <!-- Filter Form -->
    <div class="row">
      <div class="col-md-4">
        <label>Date:</label>
        <input type="date" id="filterDate" class="form-control" value="<%= filterDate || '' %>">
      </div>
      <div class="col-md-4">
        <label>Month:</label>
        <select id="filterMonth" class="form-select">
          <option value="">-- Select Month --</option>
          <% months.forEach(month => { %>
            <option value="<%= month %>" <%= month === filterMonth ? 'selected' : '' %>><%= month %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-4 d-flex align-items-end">
        <button id="resetFilter" class="btn btn-danger w-100">Reset Filter</button>
      </div>
    </div>

    <!-- Total Advance -->
    <div class="card text-center my-4">
      <div class="card-body">
        <h5>Total due from seller</h5>
        <h3 class="fw-bold text-danger">â‚¹<%= totalAdvance.toLocaleString() %></h3>
      </div>
    </div>

    <!-- Payments List -->
    <div class="row g-4">
      <% if (payments.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info text-center">No payments found for this filter.</div>
        </div>
      <% } else { %>
        <% payments.forEach(payment => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <img src="<%= payment.proofImg || 'https://source.unsplash.com/400x200/?money,transaction' %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Proof Image">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">ğŸ‘¨â€ğŸ’¼ Seller: <%= payment.name || 'N/A' %></h5>
                <p class="card-text mb-1">ğŸ“ Phone: <%= payment.phone || 'N/A' %></p>
                <p class="card-text mb-1">ğŸ’° Amount: â‚¹<%= payment.amount.toLocaleString() %></p>
                <p class="card-text mb-1">ğŸ’³ Mode: <%= payment.mode %></p>
                <p class="card-text mb-1">ğŸ“… Date: <%= payment.date %></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script src="/js/admin/paymentRecived.js"></script>
  <%- include('../partials/footer', ) %>
</body>
</html>
