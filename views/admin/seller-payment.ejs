<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: "Gyanibaba Store Dashboard" }) %>
  <link rel="stylesheet" href="/css/admin/seller-payment.css"/>
</head>
<body>
   <!-- âœ… Admin Navbar Include -->
  <%- include('../partials/adminNavbar') %>
  <div class="container">
    <a href="/admin/dashboard" class="btn btn-warning my-3">â¬… Back to Dashboard</a>
    <h2 class="mb-4 text-success">ðŸ’° Payment Received from Seller - <%= seller.name %></h2>


    <div class="mb-4 text-end">
  
</div>
    <!-- Summary -->
    <div class="row mb-4">
      <div class="col-md-6">
        <div class="summary-card">
          <h5>Total Payment Received</h5>
          <p class="h4">â‚¹<%= totalReceived.toLocaleString() %></p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="summary-card">
          <h5>Total Due from Seller</h5>
          <p class="h4 text-danger">â‚¹<%= totalAdvance.toLocaleString() %></p>
        </div>
      </div>
    </div>

    <!-- Seller Info -->
    <div class="mb-4">
      <h5>Seller Information</h5>
      <p>
        Name: <strong><%= seller.name %></strong><br>
        Mobile: <strong><%= seller.mobile %></strong><br>
        Email: <strong><%= seller.email %></strong><br>
        UPI ID: <strong><%= seller.upi %></strong>
      </p>
    </div>

    <!-- Payment Transactions -->
    <div class="row g-4">
      <% payments.forEach((txn, index) => { %>
        <div class="col-md-6">
          <div class="card p-3">
            <img src="<%= txn.proof %>" class="transaction-img mb-3" alt="Proof">
            <div class="card-body">
              <h5 class="card-title">Transaction <%= index + 1 %></h5>
              <p class="card-text">
                Amount: â‚¹<%= txn.amount.toLocaleString() %><br>
                Mode: <%= txn.mode %><br>
                Date: <%= txn.date %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <script src="/js/admin/seller-payment.js"></script>
</body>
</html>
