<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Seller Details - Gyanibaba Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="/css/admin/seller-details.css" />
  <style>
    .small-chart {
      max-width: 100%;
      width: 250px;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <div class="overlay">
    <div class="container py-4">
      <a href="/sellers" class="btn btn-outline-dark mb-3">â¬… Back to Seller List</a>
      <h2 class="mb-4">Seller Details: <%= seller.name %></h2>

      <!-- Seller Info -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="card seller-info-card w-100">
            <div class="card-body">
              <h5 class="card-title"><%= seller.name %></h5>
              <p class="card-text">ðŸ“± Mobile: <%= seller.mobile %></p>
              <p class="card-text">ðŸ“§ Email: <%= seller.email %></p>
              <p class="card-text">ðŸ’³ UPI ID: <%= seller.upiId %></p>
              <div class="row mt-4">
                <div class="col-sm-6 col-md-3">
                  <div class="bg-white text-dark p-3 rounded shadow-sm">
                    <h6>ðŸ’¸ Advance Amount</h6>
                    <a href="/admin/seller-payment/<%= seller._id %>"><p class="mb-0 fw-bold">â‚¹<%= seller.advance %></p></a>
                  </div>
                </div>
                <div class="col-sm-6 col-md-3">
                  <div class="bg-white text-dark p-3 rounded shadow-sm">
                    <h6>ðŸ’° Total Earnings</h6>
                    <p class="mb-0 fw-bold">â‚¹<%= seller.totalEarnings %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Filter -->
      <div class="row filter-bar">
        <div class="col-md-4">
          <label for="monthSelect" class="form-label">Select Month</label>
          <select id="monthSelect" class="form-select">
            <% months.forEach(function(month) { %>
              <option value="<%= month.value %>" <%= month.value === selectedMonth ? 'selected' : '' %>><%= month.label %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Summary Cards -->
    
      
      <!-- Charts -->
      <div class="row mt-4">
        <div class="col-lg-4 col-md-5 mb-4 d-flex justify-content-center align-items-center">
          <div class="card p-3 w-100 text-center">
            <h5>ðŸ“¦ Out for Delivery (Brand Wise)</h5>
            <canvas id="outForDeliveryPie" class="small-chart"></canvas>
          </div>
        </div>
        <div class="col-lg-8 col-md-7 mb-4">
          <div class="card p-3">
            <h5 class="text-center">ðŸ“Š Total Orders (Brand Wise)</h5>
            <canvas id="totalOrdersBar"></canvas>
          </div>
        </div>
      </div>

    <!-- Orders Section -->
<div class="row mt-4">
  <h4>ðŸ“‹ Orders</h4>
  <% groupedDevices.forEach(device => { %>
    <div class="col-md-6 mb-3">
      <div class="card h-100 border-start border-4 shadow-sm <%= device.status === 'sold' ? 'border-success' : 'border-warning' %>">
        <img src="<%= device.image || '/images/default-phone.png' %>" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: contain; background: #f8f9fa;">
        <div class="card-body">
          <h5 class="card-title d-flex justify-content-between align-items-center">
            <span><%= device.brand %> <%= device.name %></span>
            <span class="badge bg-dark">x<%= device.count %></span>
          </h5>
          <p class="card-text mb-1">ðŸ“… Order Date: <%= device.orderDate %></p>
          <p class="card-text mb-1">ðŸ§¾ Variant: <%= device.variant %> | ðŸŽ¨ Color: <%= device.color %></p>
          <p class="card-text mb-1">ðŸ’° Booking Amount: â‚¹<%= device.bookingAmount %></p>
          <p class="card-text fw-bold mb-2">Status: 
            <span class="<%= device.status === 'sold' ? 'text-success' : 'text-warning' %>">
              <%= device.status %>
            </span>
          </p>

          <% if (device.isOutForDelivery && String(device.sellerId) === String(seller._id)) { %>
            <form method="POST" action="/admin/orders/mark-sold?sellerId=<%= seller._id %>">
              <input type="hidden" name="bookingAmountSeller" value="<%= device.bookingAmount %>" />
              <button class="btn btn-sm btn-outline-primary w-100 mt-2">âœ… Mark All Delivered as Sold</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  <% }) %>
</div>

  <!-- Scripts -->
  <script src="/js/admin/seller-details.js"></script>
  <script>
    window.chartData = {
      pie: {
        labels: <%- JSON.stringify(pieChartLabels) %>,
        data: <%- JSON.stringify(pieChartData) %>
      },
      bar: {
        labels: <%- JSON.stringify(barChartLabels) %>,
        data: <%- JSON.stringify(barChartData) %>
      }
    };
  </script>
</body>
</html>
