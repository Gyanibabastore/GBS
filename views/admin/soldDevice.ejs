<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: "Gyanibaba Store Dashboard" }) %>
  <link rel="stylesheet" href="/css/admin/soldDevices.css" />
</head>

<body>

  <!-- ✅ Admin Navbar Include -->
  <%- include('../partials/adminNavbar') %>
  <div class="overlay">
    <div class="container">
      <a href="/admin/dashboard" class="btn btn-warning mb-3">⬅ Back to Dashboard</a>
      <h2 class="text-center mb-4">Sold Devices - Category Wise</h2>

     <!-- Filters -->
      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Filter by Month</label>
          <input type="month" class="form-control" id="monthFilter" />
        </div>
        <div class="col-md-4">
          <label class="form-label">Filter by Date</label>
          <input type="date" class="form-control" id="dateFilter" />
        </div>
        <div class="col-md-4 d-flex align-items-end">
          <button id="resetFilters" class="btn btn-outline-secondary w-100">Reset Filters</button>
        </div>
      </div>


      <!-- Table -->
      <div class="table-responsive mb-4">
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th>Brand</th>
              <th>Model</th>
              <th>Variant</th>
              <th>Color</th>
              <th>Sold Date</th>
              <th>Quantity Sold</th>
            </tr>
          </thead>
          <tbody id="soldDevicesTable">
            <% soldDevices.forEach(device => { %>
              <tr>
                <td><%= device.brand %></td>
                <td><%= device.model %></td>
                <td><%= device.variant %></td>
                <td><%= device.color %></td>
                <td><%= device.soldDate %></td>
                <td><%= device.quantitySold %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Bar Chart -->
      <div class="row mb-5">
        <div class="col-12">
          <div class="card p-4">
            <h5 class="text-center mb-3">Brand-wise Sold Devices</h5>
            <canvas id="brandBarChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.brandLabels = <%- JSON.stringify(brandBarLabels) %>;
    window.brandData = <%- JSON.stringify(brandBarData) %>;
  </script>
  <script src="/js/admin/soldDevices.js"></script>
</body>
</html>
