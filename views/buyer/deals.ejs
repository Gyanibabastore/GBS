<!DOCTYPE html>
<html lang="en">
<head><%- include('../partials/head', { title: "Gyanibaba Store Dashboard" }) %>
  <link rel="stylesheet" href="/css/buyer/deals.css" />
</head>
<body>

  <%- include('../partials/navbar') %> 
  <div class="container">
      <a href="/buyer/dashboard/<%= buyer._id %>" class="btn btn-warning my-3">â¬… Back to Dashboard</a>

    <h2 class="mb-4 text-primary">ðŸ”¥ Hot Deals</h2>
    <div class="row" id="deals-list">
      <% deals.forEach(function(deal) { 
