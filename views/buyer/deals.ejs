<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Deals - Gyanibaba Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/buyer/deals.css" />
</head>
<body>
  <div class="container">
    <h2 class="mb-4 text-primary">ðŸ”¥ Hot Deals</h2>
    <div class="row" id="deals-list">
      <% deals.forEach(function(deal) { 
           const margin = deal.returnAmount - deal.bookingAmount; 
      %>
        <div class="col-md-6 col-lg-4">
          <div class="card">
            <img src="<%= deal.imageUrl %>" class="card-img-top" alt="<%= deal.deviceName %>" />
            <div class="card-body">
              <h5 class="card-title"><%= deal.deviceName %> (<%= deal.brand %> - <%= deal.variant %>, <%= deal.color %>)</h5>
              <p>
                <strong>Booking Amount:</strong> â‚¹<%= deal.bookingAmount %><br />
                <strong>Return Amount:</strong> <span class="highlight-green">â‚¹<%= deal.returnAmount %></span><br />
                <strong>Margin:</strong> â‚¹<%= margin %><br />
                <strong>Pincode:</strong> <span class="highlight-blue"><%= deal.pincode %></span><br />
                <strong>Address:</strong> <%= deal.address %><br />
                <strong>Card Working:</strong> <span class="highlight-purple"><%= deal.cardWorking %></span>
              </p>
              <a class="btn btn-success" href="<%= deal.buyLink %>" target="_blank">Buy Now</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="/js/buyer/deals.js"></script>
</body>
</html>
