<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Orders - Gyanibaba Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/buyer/manageOrders.css" rel="stylesheet" />
</head>
<body>

  <%- include('../partials/navbar') %> 
  <div class="container py-5">
    <h2 class="mb-4">ðŸ“¦ Manage Your Orders</h2>
    <button class="btn btn-primary mb-4" id="toggle-pending-btn">Show Pending Orders</button>

    <!-- ðŸ“¦ Product Listing -->
    <div id="product-list" class="row">
      <% for (let i = 0; i < products.length; i++) {
        const product = products[i];
      %>
      <div class="col-md-6 col-lg-4">
        <div class="card p-3 mb-4">
          <img src="<%= product.imageUrl %>" class="card-img-top rounded" alt="<%= product.deviceName %>" />
          <div class="card-body">
            <h5 class="card-title"><%= product.deviceName %></h5>
            <p>
              Brand: <%= product.brand %><br />
              Variant: <%= product.variant %><br />
              Booking Amount: â‚¹<%= product.bookingAmount %><br />
              Return Amount: â‚¹<%= product.returnAmount %><br />
              Margin: â‚¹<%= product.margin %><br />
              Available Quantity: <strong><%= product.quantity %></strong>
            </p>
            <div class="cart-actions">
              <div class="quantity-controls btn-group">
                <button type="button" class="btn btn-outline-secondary qty-decrease" data-index="<%= i %>">-</button>
                <span id="qty-<%= i %>" class="btn btn-light">1</span>
                <button type="button" class="btn btn-outline-secondary qty-increase" data-index="<%= i %>">+</button>
              </div>

              <form action="/buyer/<%= buyerId %>/orders" method="POST" class="mt-3 order-form" data-index="<%= i %>">
                <input type="hidden" name="deviceName" value="<%= product.deviceName %>" />
                <input type="hidden" name="brand" value="<%= product.brand %>" />
                <input type="hidden" name="variant" value="<%= product.variant %>" />
                <input type="hidden" name="color" value="<%= product.color %>" />
                <input type="hidden" name="bookingAmount" value="<%= product.bookingAmount %>" />
                <input type="hidden" name="returnAmount" value="<%= product.returnAmount %>" />
                <input type="hidden" name="margin" value="<%= product.margin %>" />
                <input type="hidden" name="imageUrl" value="<%= product.imageUrl %>" />
                <input type="hidden" name="quantity" id="form-qty-<%= i %>" value="1" />
                <input type="hidden" id="max-qty-<%= i %>" value="<%= product.quantity %>" />
                <button type="submit" class="btn btn-success">Update Order</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <!-- ðŸ•’ Pending Orders -->
    <div id="pending-orders" style="display: none;">
      <h3 class="mt-5 mb-3">ðŸ•’ Pending Orders</h3>
      <% if (pendingOrders && pendingOrders.length > 0) { %>
        <div class="row">
          <% pendingOrders.forEach(order => { %>
            <div class="col-md-6 col-lg-4">
              <div class="card p-3 mb-4">
                <img src="<%= order.imageUrl %>" alt="<%= order.deviceName || order.title %>" class="card-img-top rounded" />
                <div class="card-body">
                  <h5><strong>Device:</strong> <%= order.deviceName || order.title || 'Unknown' %></h5>
                  <p><strong>Variant:</strong> <%= order.variant || 'N/A' %></p>
                  <p><strong>Color:</strong> <%= order.color || 'N/A' %></p>
                  <p><strong>Order Date:</strong> <%= new Date(order.date).toLocaleDateString() %></p>
                  <p><strong>Quantity:</strong> <%= order.quantity || 1 %></p>
                  <p><strong>Booking Amount:</strong> â‚¹<%= order.bookingAmount %></p>
                  <p><strong>Return Amount:</strong> â‚¹<%= order.returnAmount %></p>
                  <p><strong>Margin:</strong> â‚¹<%= order.margin %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-muted">No pending orders.</p>
      <% } %>
    </div>
  </div>

  <script src="/js/buyer/manageOrders.js"></script>
</body>
</html>
